<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="top"
        tools:context=".MenuActivity">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="195dp"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/menuimage" />

        <Button
            android:id="@+id/button_test"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:textColor="@color/white"
            android:background="@drawable/custom_button"
            android:text="@string/test" />

        <Button
            android:id="@+id/button_ucz_sie"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:textColor="@color/white"
            android:background="@drawable/custom_button"
            android:text="@string/ucz_si" />

        <Button
            android:id="@+id/button_slowa"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:textColor="@color/white"
            android:background="@drawable/custom_button"
            android:text="@string/s_owa" />

        <Button
            android:id="@+id/button_dodaj_slowo"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:textColor="@color/white"
            android:background="@drawable/custom_button"
            android:text="@string/dodaj_swoje_slowo" />

    </LinearLayout>
</ScrollView>
