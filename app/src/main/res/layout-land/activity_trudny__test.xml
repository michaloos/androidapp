<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="top"
    tools:context=".Testy.Trudny_Test">

    <include layout="@layout/wpisuj_slowo_layout"/>

    <Button
        android:id="@+id/button_nastepne_slowo_test_trudny"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cornerRadius="25sp"
        android:layout_margin="5dp"
        android:textColor="@color/white"
        android:background="@drawable/custom_button"
        android:text="@string/nast_pne_s_owo"/>

    <Button
        android:id="@+id/koniectesttrudny"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        app:cornerRadius="25sp"
        android:textColor="@color/white"
        android:background="@drawable/custom_button"
        android:text="@string/zako_cz"/>

</LinearLayout>