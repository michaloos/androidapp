<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".ActivityUczenieSie.PoziomTrudnosci2">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Wybierz właściwą odpowiedź"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/slowo_poz2"
        android:layout_width="200dp"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:textSize="15sp" />

    <include layout="@layout/two_buttons_answers"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <Button
            android:id="@+id/odpowiedz3poz2"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cornerRadius="25sp"
            android:background="@drawable/custom_button"
            android:textColor="@color/white" />

    </androidx.appcompat.widget.LinearLayoutCompat>
    <ImageButton
        android:id="@+id/speaker"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/speaker"/>

</LinearLayout>